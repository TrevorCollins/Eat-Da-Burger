<h1>Burgers!</h1>
<img src="../public/assets/images/logo.png" alt="burger logo">

<ul>
    {{#each burgers}}
    {{#unless devoured}}
    <li>
        {{burger_name}}

        <button data-id="{{id}}" data-newdevoured="{{devoured}}" class="devour">Devour it!</button>
    </li>
    {{/unless}}
    {{/each}}
</ul>


<ul>
    {{#each burgers}}
    {{#if devoured}}
    <li>
        {{burger_name}}
    </li>
    {{/if}}
    {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="name">Burger Name:</label>
        <input type="text" id="name" name="name">
    </div>

    <button type="submit">Add a Burger</button>
</form>